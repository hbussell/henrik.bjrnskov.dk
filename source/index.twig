---
layout: default.twig
title: Posts
use:
    - posts
---
 
{% block content %}
    <section class="content">
        <h1>Posts</h1>

        <ul class="listing">
            {% for post in data.posts %}
                <li>
                    <span>{{ post.date|date("j M Y") }}</span> <a href="{{ post.url }}">{{ post.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
