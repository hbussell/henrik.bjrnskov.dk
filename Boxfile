web1:
    document_root: "output_prod"

    shared_writable_dirs:
        - "app/cache"
        - "app/logs"
        - "vendor"

    php_extensions:
        - zip
        - curl

    after_build:
        - "curl -s http://getcomposer.org/installer | php > /dev/null"

    before_deploy:
        - "rm -Rf output_prod/*"
        - "php composer.phar -q install"
        - "php vendor/bin/sculpin --env=prod cache:clear"
        - "php vendor/bin/sculpin --env=prod generate"
